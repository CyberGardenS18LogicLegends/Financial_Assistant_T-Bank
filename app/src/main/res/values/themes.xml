<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FinancialAssistantTBank" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="Theme.FinancialAssistantTBank" parent="Base.Theme.FinancialAssistantTBank" />

    <style name="Theme.App.SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/backgroundColor</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <!--<item name="windowSplashScreenAnimationDuration">1000</item>-->
        <item name="postSplashScreenTheme">@style/Theme.FinancialAssistantTBank</item>
    </style>

    <!-- Custom Date Picker Theme -->
    <style name="CustomDatePickerTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/backgroundSecondary</item>
        <item name="colorSecondaryVariant">@color/backgroundSecondary</item>
        <item name="colorPrimaryDark">@color/backgroundSecondary</item>
        <item name="colorAccent">@color/backgroundSecondary</item>
        <item name="android:windowBackground">@color/backgroundSecondary</item>
    </style>
</resources>